<h1>Searching through the electronics category</h1>
<%= form_tag root_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<% @products_index['results'].each do |product| %>
  <li><%= product['name'] %></li>
<% end %>